{
    "compilerOptions": {
      "target": "ESNext",             // 编译目标版本（ES6+）
      "useDefineForClassFields": true, // 启用类字段定义（实验性）
      "module": "ESNext",             // 模块系统（ES Modules）
      "moduleResolution": "Node",     // 使用 Node.js 的模块解析方式
      "strict": true,                 // 启用所有严格类型检查
      "jsx": "preserve",              // 保留 JSX（React/Vue）
      "resolveJsonModule": true,       // 解析 JSON 文件为模块
      "isolatedModules": true,        // 每个文件作为独立模块
      "esModuleInterop": true,        // 兼容 CommonJS/ES Module
      "lib": ["ESNext", "DOM"],       // 包含的库文件（DOM 支持）
      "skipLibCheck": true,           // 跳过第三方库类型检查（提升速度）
      "baseUrl": ".",                 // 基础路径
      "paths": {
        "@/*": ["src/*"]              // 路径别名（@ 指向 src 目录）
      },
      "types": ["pinia-plugin-persistedstate"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],  // 包含的文件
}

